<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back2"
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textColor="#0099CC"
            android:text="请求数据流信息" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
        <Button
            android:id="@+id/dataStreamStart"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="开始测量"/>
        <Button
            android:id="@+id/dataStreamStop"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="结束测量"/>
        <Button
            android:id="@+id/dataStreamReturn"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="返回"/>
    </LinearLayout>

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/engine_load_key"
                android:layout_height="wrap_content"
                android:text="发动机负荷： "/>
            <TextView
                android:id="@+id/engine_load"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/coolant_temperature_key"
                android:layout_height="wrap_content"
                android:text="冷却液温度： "/>
            <TextView
                android:id="@+id/coolant_temperature"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/engine_speed_key"
                android:layout_height="wrap_content"
                android:text="发动机转速： "/>
            <TextView
                android:id="@+id/engine_speed"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/mileage_key"
                android:layout_height="wrap_content"
                android:text="里程： "/>
            <TextView
                android:id="@+id/mileage"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/speed_key"
                android:layout_height="wrap_content"
                android:text="车速： "/>
            <TextView
                android:id="@+id/speed"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/air_temperature_key"
                android:layout_height="wrap_content"
                android:text="进气温度： "/>
            <TextView
                android:id="@+id/air_temperature"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/air_flow_key"
                android:layout_height="wrap_content"
                android:text="空气流量： "/>
            <TextView
                android:id="@+id/air_flow"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/position_key"
                android:layout_height="wrap_content"
                android:text="节气门位置： "/>
            <TextView
                android:id="@+id/position"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/voltage_key"
                android:layout_height="wrap_content"
                android:text="电瓶电压： "/>
            <TextView
                android:id="@+id/voltage"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/fault_condition_key"
                android:layout_height="wrap_content"
                android:text="故障状态： "/>
            <TextView
                android:id="@+id/fault_condition"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/fuel_trim_key"
                android:layout_height="wrap_content"
                android:text="燃油修正： "/>
            <TextView
                android:id="@+id/fuel_trim"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/angle_key"
                android:layout_height="wrap_content"
                android:text="点火提前角： "/>
            <TextView
                android:id="@+id/angle"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/pressure_key"
                android:layout_height="wrap_content"
                android:text="进气绝对压力： "/>
            <TextView
                android:id="@+id/pressure"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/OBD_type_key"
                android:layout_height="wrap_content"
                android:text="OBD类型： "/>
            <TextView
                android:id="@+id/OBD_type"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/fuel_time_key"
                android:layout_height="wrap_content"
                android:text="油耗按小时： "/>
            <TextView
                android:id="@+id/fuel_time"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/fuel_distance_key"
                android:layout_height="wrap_content"
                android:text="油耗按公里： "/>
            <TextView
                android:id="@+id/fuel_distance"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>

</LinearLayout>