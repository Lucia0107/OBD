<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity"
    android:background="@drawable/back1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加速度"
        android:id="@+id/accelerationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="胎压"
        android:id="@+id/pressureButton"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/accelerationButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据流"
        android:id="@+id/dataButton"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/pressureButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健康状态"
        android:id="@+id/healthButton"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/dataButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIN信息"
        android:id="@+id/vinButton"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/healthButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余燃油"
        android:id="@+id/fuelButton"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/vinButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
